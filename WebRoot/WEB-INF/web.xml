<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>serTest</display-name>
  <filter>
    <filter-name>characterEncodingFilter</filter-name>
    <filter-class>com.cn.filter.CharacterEncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>characterEncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>loginFinlter</filter-name>
    <filter-class>com.cn.filter.LonginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>loginFinlter</filter-name>
    <url-pattern>/jsp/*</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>DeleteById</servlet-name>
    <servlet-class>com.cn.ajax.DeleteById</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteById</servlet-name>
    <url-pattern>/deletebyid</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginOut</servlet-name>
    <servlet-class>com.cn.servlet.LoginOut</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>AddUser</servlet-name>
    <servlet-class>com.cn.servlet.AddUser</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginOut</servlet-name>
    <url-pattern>/LoginOut</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddUser</servlet-name>
    <url-pattern>/adduser</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>404</error-code>
    <location>/404.html</location>
  </error-page>
  <listener>
    <listener-class>com.cn.listen.OnlineUserListen</listener-class>
  </listener>
  <listener>
    <listener-class>com.cn.listen.OnlineUserSession</listener-class>
  </listener>
</web-app>